{
  "name": "iscrcpy",
  "version": "1.0.0",
  "description": "Android screen mirroring tool powered by scrcpy",
  "main": "out/main/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "postinstall": "electron-vite postinstall",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "generate-icons": "node scripts/convert-icon.mjs"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-vite": "^5.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.2.2",
    "vite": "^5.4.21"
  },
  "build": {
    "appId": "com.iscrcpy.app",
    "productName": "iScrcpy",
    "directories": {
      "output": "dist-win"
    },
    "win": {
      "target": "dir",
      "icon": "app/icon.ico"
    },
    "files": [
      "dist-electron/**/*",
      "app/**/*"
    ]
  },
  "keywords": [
    "android",
    "scrcpy",
    "mirroring",
    "electron",
    "react"
  ],
  "author": "iScrcpy Contributors",
  "license": "Apache-2.0",
  "publishers": [
    {
      "name": "@electron-forge/publisher-github",
      "config": {
        "repository": {
          "owner": "${{ github.repository_owner }}",
          "name": "${{ github.event.repository.name }}"
        },
        "draftRelease": true
      }
    }
  ]
}
